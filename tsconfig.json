{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    // "types": ["jest", "node"],
    "rootDir": ".",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@autochess/card": ["packages/card/src"],
      "@autochess/buff": ["packages/buff/src"],
      "@autochess/skill": ["packages/skill/src"],
      "@autochess/game": ["packages/game/src"]
    }
  },
  "include": ["packages/*/src", "packages/*/__tests__"]
}
